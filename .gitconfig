[user]
	email = benedikt.wolters@googlemail.com
	name = Benedikt Wolters
[color]
    ui = auto
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
    whitespace = red reverse
[color "status"]
    added = yellow
    changed = green
    untracked = cyan
[core]
    whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol

[alias]
    a = add
    st = status -uno
    c = commit
    ca = commit -a
    co = commit
    br = branch
    ch = checkout
    df = diff
    dc = diff --cached
    lg = log -p
    lol = log --graph --decorate --pretty=oneline --abbrev-commit
    lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
    ls = ls-files

    # Show files ignored by git:
    ign = ls-files -o -i --exclude-standard

[giggle]
	main-window-maximized = false
	main-window-geometry = 1600x900+0+0
	file-view-vpane-position = 528
	history-view-vpane-position = 654
	main-window-view = FileView
